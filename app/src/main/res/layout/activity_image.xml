<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/colorPrimary"
        android:id="@+id/up"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <com.yarolegovich.discretescrollview.DiscreteScrollView
            android:id="@+id/picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:dsv_orientation="horizontal"/>
    <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"

            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbar_img" app:subtitleTextColor="@color/white" app:titleTextColor="@color/white"
    />
    <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp" android:layout_alignParentBottom="true" android:layout_marginBottom="35dp">

        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_1"
                android:background="@drawable/action_button"
                android:src="@drawable/ic_favorite_black_24dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:padding="5dp"
                android:contentDescription="@string/like"
                android:layout_marginLeft="75dp"
                android:layout_marginStart="75dp"

                android:layout_alignParentLeft="true"/>

        <ImageButton
                android:scaleType="fitXY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_share_black_24dp"
                android:id="@+id/button_2"
                android:background="@drawable/action_button"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="75dp" android:padding="5dp"
                android:contentDescription="@string/share" android:layout_alignParentRight="true"
                android:layout_marginRight="75dp"/>
    </RelativeLayout>


</RelativeLayout>

